from tkinter import *
from tkinter.font import BOLD

root = Tk()
root.title('Number Guess Game V2')
root.geometry('700x700')
root.config(bg='#0243a6')

#Initializing any variables
numVar = IntVar()

#Section for functions
def showNumber():
    pass
    label1 = Label(root, 
            font=('GUMDROP', 25, BOLD),
            bg='gold').grid(row=3, column=0, columnspan=3)

def deleteEntry():
    entry1.delete(18, END)


#Area for widgets
title = Label(root, 
            text='Enter a number -->', 
            font=('ARIAL', 15, BOLD),
            bg='gold').grid(row=0, column=0)

entry1 = Entry(root, 
            font=('ARIAL', 15, BOLD),
            bg='white',
            Variable = numVar)
entry1.insert(0, 'Enter number here: ')
entry1.grid(row=0, column=1) # Cannot add .grid to the end of line 26, will return a AttributeError, the .insert and .grid must be used separately
#Use a try and catch exception for this error in the future.

submit = Button(root, 
                text='Submit',
                font=('ARIAL', 10, BOLD),
                command=showNumber).grid(row=1, column=0)

delete = Button(root, 
                text='Delete',
                font=('ARIAL', 10, BOLD),
                command=deleteEntry).grid(row=1, column=1)

root.mainloop()
