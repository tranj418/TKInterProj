from tkinter import *
from tkinter.font import BOLD
import random

root = Tk()
root.title('Number Guess Game V2')
root.geometry('700x700')
root.config(bg='#0243a6')


#Section for functions
def showNumber():
    guess = 0
    num1 = int(entry1.get())#To avoid a valueTypeError do NOT use the .insert with the .get, it will complain about a string.
    label1 = Label(root, 
            font=('GUMDROP', 25, BOLD),
            bg='gold',
            width=30)
    label1.grid(row=3, column=0, columnspan=3)
    label1.config(text=f'Enter a number between 1 and {num1}\n Enter guess below.')
    entry1.destroy()
    entry2 = Entry(root, 
            font=('ARIAL', 15, BOLD),
            bg='white')
    entry2.grid(row=4, column=0)

 

def deleteEntry():
    entry1.delete(0, END)


#Area for widgets
title = Label(root, 
            text='Number Guessing Game!', 
            font=('ARIAL', 15, BOLD),
            bg='gold').grid(row=0, column=0)

entry1 = Entry(root, 
            font=('ARIAL', 15, BOLD),
            bg='white')
#entry1.insert(0, 'Enter number here: ')
entry1.grid(row=0, column=1)
#Cannot add .grid to the end of line 26, will return a AttributeError, the .insert and .grid must be used separately
#Use a try and catch exception for this error in the future.



submit = Button(root, 
                text='Submit',
                font=('ARIAL', 10, BOLD),
                command=showNumber).grid(row=1, column=0)

delete = Button(root, 
                text='Delete',
                font=('ARIAL', 10, BOLD),
                command=deleteEntry).grid(row=1, column=1)

root.mainloop()
