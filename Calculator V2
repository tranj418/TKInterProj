decimal = Button(numFrame, 
            text='.', 
            bg='gold',
            activebackground='gold',
            relief=RAISED,
            width=11,
            height=3,
            command=lambda: numButton('.'))
decimal.grid(row=4, column=0)


root.mainloop()
