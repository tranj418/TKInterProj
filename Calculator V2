            text='=', 
            bg='gold',
            activebackground='gold',
            relief=RAISED,
            width=11,
            height=3,
            command=equals)
equals.grid(row=3, column=1)

clearBtn = Button(numFrame, 
            text='Clear',
            font=('Arial', 9), 
            bg='gold',
            activebackground='gold',
            relief=RAISED,
            width=11,
            height=3,
            command=clear)
clearBtn.grid(row=3, column=2)

plus = Button(numFrame, 
            text='+', 
            bg='gold',
            activebackground='gold',
            relief=RAISED,
            width=11,
            height=3,
            command=lambda: numButton('+'))
plus.grid(row=0, column=3)

subtract = Button(numFrame, 
            text='-', 
            bg='gold',
            activebackground='gold',
            relief=RAISED,
            width=11,
