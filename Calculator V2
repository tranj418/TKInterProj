            text=7, 
            bg='gold',
            activebackground='gold',
            relief=RAISED,
            width=11,
            height=3,
            command=lambda: numButton(7))
num7.grid(row=2, column=0)

num8 = Button(numFrame, 
            text=8, 
            bg='gold',
            activebackground='gold',
            relief=RAISED,
            width=11,
            height=3,
            command=lambda: numButton(8))
